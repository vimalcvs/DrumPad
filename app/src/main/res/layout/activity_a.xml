<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demotxt.myapp.drumpad.MainActivityA"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/black_button"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/blue_button"
            android:onClick="playsound1"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/blue_button"
            android:onClick="playsound2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/blue_button"
            android:onClick="playsound3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:onClick="playsound4"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/orange_button"
            android:onClick="playsound5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/pink_button"
            android:onClick="playsound6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_buton"
            android:onClick="playsound7"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/green_buton"
            android:onClick="playsound8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/pink_button"
            android:onClick="playsound9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_buton"
            android:onClick="playsound10"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/green_buton"
            android:onClick="playsound11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:background="@drawable/pink_button"
            android:onClick="playsound12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="7dp" />
    </LinearLayout>

</LinearLayout>
